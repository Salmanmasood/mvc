@model loaddatamvc.Models.employees
@{
    ViewBag.Title = "create";
}

<h2>Add Records</h2>
<p>@Html.ActionLink("View Record", "index", "Home") </p>



@using(Html.BeginForm())
{
<table>

    <tr>
        <td>Name:</td>
        <td>@Html.TextAreaFor(Model=> Model.emp_name) </td>
    </tr>

    <tr>
        <td>Email:</td>
        <td>@Html.TextAreaFor(Model => Model.emp_email) </td>
    </tr>

    <tr>
        <td></td>
        <td><input  type="submit" value="Add Record!"/> </td>
    </tr>

</table>

}

<p>@Html.ValidationSummary()</p>